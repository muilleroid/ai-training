{
  "compilerOptions": {
    "baseUrl": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2021",
    "typeRoots": ["@types-extensions", "node_modules/@types", "node_module/bun-types"]
  },
  "exclude": ["node_modules"]
}
